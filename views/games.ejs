<%- include('partials/header.ejs') %>

<div class="p-5 md:px-0 w-full flex flex-row justify-center">
    <div class="w-full md:w-[65%] flex flex-col space-y-5">
        <h1 class="text-3xl font-bold"><%= platform.name %></h1>

        <form action="/<%= platform.slug %>/games/" method="GET" class="w-full max-w-md flex items-center gap-2">
            <input
                type="text"
                name="q"
                placeholder="Pesquisar jogos..."
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900"
            />
            <button
                type="submit"
                class="px-4 py-2 bg-black text-white rounded-lg hover:bg-gray-900 transition cursor-pointer"
            >
                Buscar
            </button>
        </form>

        <p class="text-gray-500 text-sm">Mostrando <%= games.length %> jogos do cat√°logo.</p>

        <div class="flex flex-wrap justify-center gap-5">
            <% games.forEach(game => { %>
                <%- include('partials/cards/game-card.ejs', { game, applySizing: true }) %>
            <% }) %>
        </div>
    </div>
</div>


<%- include('partials/footer.ejs') %>