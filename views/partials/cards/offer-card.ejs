<div class="overflow-hidden rounded-lg border border-gray-800 bg-white w-[20%] lg:w-[13%] flex flex-col space-y-2 game-card"
>
    <div class="flex flex-col-reverse w-full">
        <!-- Capa do jogo -->
        <img class="w-full h-full object-fill object-top z-0 aspect-[3/4]" src="<%= game.coverUrl %>" onerror="this.onerror=null;this.src='https://dummyimage.com/540x720/99a1af/fff.png&text=Imagem+n%C3%A3o+dispon%C3%ADvel';">

        <!-- Moldura da plataforma (como PS4, Xbox, etc.) -->
        <img class="w-full object-contain z-1 pointer-events-none select-none" src="/covers/<%= game.mongo.platform ?? platform.slug %>.png" onerror="this.style.display='none'">
    </div>

    <div class="flex flex-col px-2 h-full pb-2">
        <h3 class="text-center font-bold"><%= game.name %></h3>
        <div class="space-y-2 flex flex-col">
            <% if (game.mongo?.price) { %>
                <div class="flex flex-col">
                    <div class="flex flex-col-reverse md:flex-row justify-between items-center">
                        <p class="font-semibold text-2xl">R$ <%= Math.floor(game.mongo.price) %><span class="text-sm">,<%= (game.mongo.price % 1).toFixed(2).substring(2) %></span></p>
                        <div class="h-fit flex flex-row justify-center items-center bg-gray-200 px-2 py-1 rounded-full">
                            <p class="text-gray-800 text-xs font-semibold">
                                <%= game.mongo.condition %>
                            </p>
                        </div>
                    </div>
                    <em class="text-xs font-light text-center md:text-start">vendido por <%= game.mongo.vendorName %></em>
                </div>
            <% } else { %>
                <p class="text-lg">Indispon√≠vel</span></p>
            <% } %>
            
            <a
                href="/games/<%= game.id %>"
                class="px-2 py-2 bg-black text-white rounded-lg hover:bg-gray-900 transition cursor-pointer"
            >
                <%= game.price ? "Comprar" : "Ver detalhes" %>
            </a>
        </div>
    </div>
   
</div>